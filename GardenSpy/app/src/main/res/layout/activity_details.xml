<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="openSettingsPage"
            android:text="@string/controls"
            android:visibility="visible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/details"
            android:visibility="visible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="openGraphsPage"
            android:text="@string/graphs"
            android:visibility="visible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_data"
                    android:textColor="@color/primeNonOpaque"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="@string/date" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_fetched"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="@string/time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="@string/humlabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vapor"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vaporLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="@string/vapLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dew_point"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dewLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="@string/dewlabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturated_vapor"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/satVapLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="@string/sarvaplabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/moisture"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moistLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="@string/moistlabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:textColor="@color/primeNonOpaque"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempLabel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                tools:text="@string/templabel" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>